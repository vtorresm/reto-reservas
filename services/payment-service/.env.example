# Configuración del servidor
NODE_ENV=development
PORT=3004
HOST=localhost

# Base de datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=coworking_payment_user
DB_PASSWORD=coworking_payment_password
DB_DATABASE=coworking_payments
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_MAX_QUERY_TIME=5000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=4
REDIS_DEFAULT_TTL=3600
REDIS_MAX_CONNECTIONS=100

# Otros servicios
USER_SERVICE_URL=http://localhost:3001
BOOKING_SERVICE_URL=http://localhost:3003
RESOURCE_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_URL=http://localhost:3005

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Configuración de pagos
DEFAULT_CURRENCY=USD
MIN_PAYMENT_AMOUNT=1.00
MAX_PAYMENT_AMOUNT=10000.00
PAYMENT_TIMEOUT_MINUTES=15

# Configuración de fees
STRIPE_APPLICATION_FEE_PERCENT=2.9
STRIPE_APPLICATION_FEE_FIXED=0.30
PAYPAL_FEE_PERCENT=3.49
PAYPAL_FEE_FIXED=0.49

# Configuración de reembolsos
AUTO_REFUND_THRESHOLD=100.00
MAX_REFUND_PERCENTAGE=100
REFUND_PROCESSING_DAYS=3

# Configuración de facturación
INVOICE_DUE_DAYS=30
INVOICE_REMINDER_DAYS=7,14,21
INVOICE_LATE_FEE_PERCENTAGE=1.5

# Configuración de suscripciones
SUBSCRIPTION_GRACE_PERIOD_DAYS=3
SUBSCRIPTION_RETRY_ATTEMPTS=3
SUBSCRIPTION_RETRY_INTERVAL_DAYS=1

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Health Check
HEALTH_CHECK_PATH=/health

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=true
TRACING_SERVICE_NAME=payment-service
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Kafka (para eventos)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=payment-service
KAFKA_GROUP_ID=payment-service-group

# Webhooks
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_RETRY_ATTEMPTS=3

# Configuración de seguridad
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET_FOR_WEBHOOKS=your-webhook-jwt-secret

# Configuración de producción
# PRODUCTION_DB_SSL=true
# PRODUCTION_REDIS_SSL=true
# PRODUCTION_METRICS=true
# PRODUCTION_TRACING=true
# PRODUCTION_LOG_LEVEL=warn
# PRODUCTION_WEBHOOK_VERIFY=true