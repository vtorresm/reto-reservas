# Configuración del servidor
NODE_ENV=development
PORT=3006
HOST=localhost

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=coworking_config_user
DB_PASSWORD=coworking_config_password
DB_DATABASE=coworking_config
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_MAX_QUERY_TIME=5000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=6
REDIS_DEFAULT_TTL=3600
REDIS_MAX_CONNECTIONS=100

# Otros servicios
USER_SERVICE_URL=http://localhost:3001
BOOKING_SERVICE_URL=http://localhost:3003
RESOURCE_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005

# Consul (para service discovery)
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_KEYS_PREFIX=coworking/config

# etcd (alternativa a Consul)
ETCD_HOSTS=localhost:2379
ETCD_NAMESPACE=coworking/config

# Configuración de feature flags
FEATURE_FLAG_CACHE_TTL=300
FEATURE_FLAG_DEFAULT_STRATEGY=boolean

# Configuración de configuraciones
CONFIG_CACHE_TTL=600
CONFIG_CHANGE_DETECTION_INTERVAL=30000
CONFIG_BACKUP_ENABLED=true
CONFIG_BACKUP_INTERVAL=86400000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Health Check
HEALTH_CHECK_PATH=/health

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=true
TRACING_SERVICE_NAME=config-service
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Kafka (para eventos)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=config-service
KAFKA_GROUP_ID=config-service-group

# Configuración de respaldos
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_COMPRESSION_ENABLED=true

# Configuración de auditoría
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_SENSITIVE_DATA_MASKING=true

# Configuración de producción
# PRODUCTION_DB_SSL=true
# PRODUCTION_REDIS_SSL=true
# PRODUCTION_METRICS=true
# PRODUCTION_TRACING=true
# PRODUCTION_LOG_LEVEL=warn
# PRODUCTION_CONSUL_SECURE=true
# PRODUCTION_ETCD_SECURE=true