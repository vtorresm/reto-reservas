# Configuración del servidor
NODE_ENV=development
PORT=3001
HOST=localhost

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=coworking_user
DB_PASSWORD=coworking_password
DB_DATABASE=coworking_users
DB_SCHEMA=public
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_MAX_QUERY_TIME=5000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_DEFAULT_TTL=3600
REDIS_MAX_CONNECTIONS=100

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=user-service

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# OAuth - Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3001/api/v1/auth/facebook/callback

# Email (para verificación y notificaciones)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@coworking.com

# Frontend
FRONTEND_URL=http://localhost:4200

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_TTL=900
RATE_LIMIT_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Health Check
HEALTH_CHECK_PATH=/health

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=true
TRACING_SERVICE_NAME=user-service
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Kafka (para eventos)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=user-service
KAFKA_GROUP_ID=user-service-group

# Seguridad adicional
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600
REFRESH_TOKEN_TIMEOUT=604800

# Feature Flags
FEATURE_SSO_GOOGLE=true
FEATURE_SSO_FACEBOOK=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PHONE_VERIFICATION=false
FEATURE_TWO_FACTOR_AUTH=false

# Límites de recursos
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=900
MAX_SESSIONS_PER_USER=5

# Configuración de producción
# PRODUCTION_DB_SSL=true
# PRODUCTION_REDIS_SSL=true
# PRODUCTION_METRICS=true
# PRODUCTION_TRACING=true
# PRODUCTION_LOG_LEVEL=warn