# Configuración del servidor
NODE_ENV=development
PORT=3003
HOST=localhost

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=coworking_booking_user
DB_PASSWORD=coworking_booking_password
DB_DATABASE=coworking_bookings
DB_SCHEMA=public
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_MAX_QUERY_TIME=5000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=3
REDIS_DEFAULT_TTL=3600
REDIS_MAX_CONNECTIONS=100

# Otros servicios
USER_SERVICE_URL=http://localhost:3001
RESOURCE_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005

# Configuración de reservas
DEFAULT_CURRENCY=USD
DEFAULT_CANCELLATION_DEADLINE_HOURS=2
DEFAULT_MAX_ADVANCE_BOOKING_DAYS=90
DEFAULT_REMINDER_HOURS_BEFORE=24

# Configuración de calendario
CALENDAR_CACHE_TTL=300
CALENDAR_MAX_DAYS_AHEAD=365
CALENDAR_TIME_SLOT_MINUTES=30

# Configuración de conflictos
CONFLICT_CHECK_INTERVAL=300000
CONFLICT_CACHE_TTL=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Health Check
HEALTH_CHECK_PATH=/health

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=true
TRACING_SERVICE_NAME=booking-service
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Kafka (para eventos)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=booking-service
KAFKA_GROUP_ID=booking-service-group

# Límites de reservas
MAX_BOOKINGS_PER_USER_PER_DAY=10
MAX_BOOKINGS_PER_USER_PER_WEEK=50
MAX_CONCURRENT_BOOKINGS_PER_USER=5
MAX_RECURRENT_BOOKINGS=20

# Configuración de producción
# PRODUCTION_DB_SSL=true
# PRODUCTION_REDIS_SSL=true
# PRODUCTION_METRICS=true
# PRODUCTION_TRACING=true
# PRODUCTION_LOG_LEVEL=warn