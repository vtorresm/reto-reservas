# Configuración del servidor
NODE_ENV=development
PORT=3002
HOST=localhost

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=coworking_resources
MONGODB_USER=coworking_resource_user
MONGODB_PASSWORD=coworking_resource_password
MONGODB_AUTH_SOURCE=admin

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2
REDIS_DEFAULT_TTL=3600
REDIS_MAX_CONNECTIONS=100

# JWT (para comunicación con otros servicios)
JWT_SECRET=your-jwt-secret-for-interservice-communication
JWT_EXPIRES_IN=15m

# Otros servicios
USER_SERVICE_URL=http://localhost:3001
BOOKING_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005

# Configuración de recursos
DEFAULT_CURRENCY=USD
DEFAULT_MIN_BOOKING_HOURS=1
DEFAULT_MAX_ADVANCE_BOOKING_DAYS=90

# Configuración de disponibilidad
AVAILABILITY_CHECK_INTERVAL=300000
AVAILABILITY_CACHE_TTL=300

# Configuración de búsqueda
SEARCH_DEFAULT_RADIUS_KM=5
SEARCH_MAX_RESULTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Health Check
HEALTH_CHECK_PATH=/health

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=true
TRACING_SERVICE_NAME=resource-service
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Kafka (para eventos)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=resource-service
KAFKA_GROUP_ID=resource-service-group

# Límites de recursos
MAX_RESOURCES_PER_USER=50
MAX_IMAGES_PER_RESOURCE=10
MAX_TAGS_PER_RESOURCE=20

# Configuración de producción
# PRODUCTION_MONGODB_SSL=true
# PRODUCTION_REDIS_SSL=true
# PRODUCTION_METRICS=true
# PRODUCTION_TRACING=true
# PRODUCTION_LOG_LEVEL=warn