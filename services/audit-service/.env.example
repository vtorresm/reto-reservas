# Configuración del servidor
NODE_ENV=development
PORT=3007
HOST=localhost

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=coworking_audit_user
DB_PASSWORD=coworking_audit_password
DB_DATABASE=coworking_audit
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_MAX_QUERY_TIME=5000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=7
REDIS_DEFAULT_TTL=3600
REDIS_MAX_CONNECTIONS=100

# Elasticsearch (para búsqueda avanzada de logs)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=coworking-audit

# Otros servicios
USER_SERVICE_URL=http://localhost:3001
BOOKING_SERVICE_URL=http://localhost:3003
RESOURCE_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005
CONFIG_SERVICE_URL=http://localhost:3006

# Configuración de logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILE_SIZE=100MB
LOG_MAX_FILES=30
LOG_ARCHIVE_DAYS=90

# Configuración de auditoría
AUDIT_RETENTION_DAYS=2555
AUDIT_COMPLIANCE_MODE=true
AUDIT_SENSITIVE_DATA_MASKING=true
AUDIT_REAL_TIME_ENABLED=true

# Configuración de alertas
ALERT_WEBHOOK_URL=
ALERT_SLACK_WEBHOOK=
ALERT_EMAIL_RECIPIENTS=
ALERT_THRESHOLD_ERROR_COUNT=10
ALERT_THRESHOLD_RESPONSE_TIME=5000

# Configuración de exportación
EXPORT_FORMATS=pdf,csv,xlsx,json
EXPORT_MAX_RECORDS=100000
EXPORT_COMPRESSION_ENABLED=true
EXPORT_ENCRYPTION_ENABLED=true

# Configuración de agregaciones
AGGREGATION_CACHE_TTL=300
AGGREGATION_MAX_TIME_RANGE=365

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Health Check
HEALTH_CHECK_PATH=/health

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=true
TRACING_SERVICE_NAME=audit-service
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Kafka (para eventos)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=audit-service
KAFKA_GROUP_ID=audit-service-group

# Configuración de respaldos
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Configuración de producción
# PRODUCTION_DB_SSL=true
# PRODUCTION_REDIS_SSL=true
# PRODUCTION_METRICS=true
# PRODUCTION_TRACING=true
# PRODUCTION_LOG_LEVEL=warn
