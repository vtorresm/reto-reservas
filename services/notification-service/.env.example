# Configuración del servidor
NODE_ENV=development
PORT=3005
HOST=localhost

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=coworking_notification_user
DB_PASSWORD=coworking_notification_password
DB_DATABASE=coworking_notifications
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_MAX_QUERY_TIME=5000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=5
REDIS_DEFAULT_TTL=3600
REDIS_MAX_CONNECTIONS=100

# Otros servicios
USER_SERVICE_URL=http://localhost:3001
BOOKING_SERVICE_URL=http://localhost:3003
RESOURCE_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3004

# Configuración de email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@coworking.com

# SendGrid (alternativa)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@coworking.com

# Firebase Cloud Messaging (para push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key

# Configuración de notificaciones
DEFAULT_EMAIL_TEMPLATES_PATH=templates/email
DEFAULT_SMS_TEMPLATES_PATH=templates/sms
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# Configuración de eventos comunitarios
EVENT_REMINDER_HOURS_BEFORE=24,2
EVENT_FEEDBACK_DEADLINE_DAYS=7
MAX_EVENT_ATTENDEES=100
EVENT_IMAGE_MAX_SIZE=5242880

# Configuración de mensajes/foros
MESSAGE_MAX_LENGTH=2000
MESSAGE_HISTORY_DAYS=90
MAX_ATTACHMENTS_PER_MESSAGE=5
ATTACHMENT_MAX_SIZE=10485760

# Configuración de WebSockets
WEBSOCKET_HEARTBEAT_INTERVAL=30000
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_MESSAGE_RATE_LIMIT=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Health Check
HEALTH_CHECK_PATH=/health

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=true
TRACING_SERVICE_NAME=notification-service
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Kafka (para eventos)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=notification-service
KAFKA_GROUP_ID=notification-service-group

# Configuración de plantillas
TEMPLATE_CACHE_TTL=3600
TEMPLATE_DEFAULT_LANGUAGE=es
TEMPLATE_SUPPORTED_LANGUAGES=es,en,pt

# Configuración de producción
# PRODUCTION_DB_SSL=true
# PRODUCTION_REDIS_SSL=true
# PRODUCTION_METRICS=true
# PRODUCTION_TRACING=true
# PRODUCTION_LOG_LEVEL=warn
# PRODUCTION_EMAIL_SECURE=true
# PRODUCTION_FIREBASE_CREDENTIALS_PATH=/secrets/firebase-credentials.json